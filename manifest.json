{
    "name": "FriendFeed & Co",
    "version": "1.22",
    "description": "Разные дополнительные удобства во FriendFeed-е",

    "manifest_version": 2,

    "icons": {
        "128": "Icon.png"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [ "http://friendfeed.com/*", "https://friendfeed.com/*" ],
            "js": [
                "common.js",
                "settings-chrome.js",
                "content-script.js",
                "content-script-chrome.js",

                "actions/show-settings.js",
                "actions/norm-names.js",
                "actions/attached-images.js",
                "actions/lightboxed-images.js",
                "actions/kill-duck.js",

                "actions/comments-common.js",
                "actions/comments-avatars.js",
                "actions/comments-hl-refs.js",
                "actions/comments-mark-author.js"
            ],
            "css": ["content.css"]
        }
    ],
    "options_page": "options.html",
    "web_accessible_resources": ["options.html"],
    "permissions": ["storage",
        "http://friendfeed-api.com/*", "http://m.friendfeed-media.com/*", "http://i.friendfeed.com/*",
        "http://api.instagram.com/*"
    ]
}
